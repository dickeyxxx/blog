!!!
%html{ itemscope: '', itemtype: 'http://schema.org/Article' }
  %head
    = yield :title

    = favicon_link_tag    "/favicon.png"
    = stylesheet_link_tag    "//fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic&subset=latin"
    = stylesheet_link_tag    "application"
    = stylesheet_link_tag    "//coderwall.com/stylesheets/jquery.coderwall.css"
    = javascript_include_tag "application"

    = auto_discovery_link_tag :atom, 'http://dickey.xxx/posts.xml'

    %meta{ name: "viewport", content: "user-scalable=no, width=device-width, initial-scale=1.0" }
    %meta{ property: "og:site_name", content: "Jeff Dickey's Blog" }
    %meta{ property: "fb:app_id", content: ENV['FACEBOOK_APP_ID'] }
    - if content_for? :head
      = yield :head
    - else
      %meta{ property: "og:title", content: "dickey.xxx" }
      %meta{ property: "og:type", content: "website" }
      %meta{ property: "og:image", content: "http://dickey.xxx/img/xxx.jpg" }
      %meta{ property: "og:url", content: "http://dickey.xxx" }

    :javascript
      // GA
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-16475858-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    = csrf_meta_tags
  %body
    #fb-root
    #sidebar-bg
    #sidebar
      = image_tag 'xxx.jpg', class: 'jeff'
      %h1= link_to "Jeff Dickey", '/'
      = link_to image_tag('rss.png'), 'http://feeds.feedburner.com/jeffdickey', class: 'feed'
      %nav
        %ul
          %li= link_to "Let's grab a beer!", 'http://letsgrababeer.com/'
          %li= link_to_unless_current "About", '/about'
          %li= link_to_unless_current "Skills", '/skills'
          - if request.url.include? 'projects'
            %li= link_to "Projects", '/projects', class: 'current'
          - else
            %li= link_to "Projects", '/projects'
          %li= link_to "Resume", 'http://careers.stackoverflow.com/dickey', target: '_blank'
          %li= link_to "Facebook", 'https://facebook.com/dickeyj'
          %li= link_to "Twitter", 'https://twitter.com/dickeyxxx'
          %li= link_to "LinkedIn", 'https://linkedin.com/in/dickeyxxx'
          %li= link_to "GitHub", 'https://github.com/dickeyxxx'
          %li= link_to "Code for LA", 'http://meetup.com/codeforla'
          %li{ style: 'display:none;' }= link_to "+", 'https://plus.google.com/110137671458974548647?rel=author'
          %li= link_to_unless_current "Admin", '/admin', data: { admin: true }
          %li= link_to_unless_current "Add New Post", '/admin/posts/new', data: { admin: true }
      %span.email jeff@dickey.xxx
      %a{ href: "https://twitter.com/dickeyxxx",  class: "twitter-follow-button", data: { 'show-count' => "false", 'lang' => "en" } }
      = javascript_include_tag "//platform.twitter.com/widgets.js"
    #content
      = yield

