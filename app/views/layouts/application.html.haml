!!!
%html
  %head
    = yield :title
    = stylesheet_link_tag    "application"
    = stylesheet_link_tag    "iphone", media: 'only screen and (max-device-width: 480px)'
    = javascript_include_tag "application"
    = javascript_include_tag "//platform.twitter.com/widgets.js"
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-16475858-1']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=#{ENV['FACEBOOK_APP_ID']}";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    %meta{ name: "viewport", content: "user-scalable=no, width=device-width, initial-scale=1.0" }
    %meta{ property: "og:site_name", content: "Jeff Dickey's Blog" }
    %meta{ property: "fb:app_id", content: ENV['FACEBOOK_APP_ID'] }
    - if content_for? :head
      = yield :head
    - else
      %meta{ property: "og:title", content: "Jeff Dickey's Blog" }
      %meta{ property: "og:type", content: "website" }
      %meta{ property: "og:image", content: "http://jeffdickey.info/img/jeff.jpg" }
      %meta{ property: "og:url", content: "http://blog.jeffdickey.info" }
    = csrf_meta_tags
  %body
    #fb-root
    #sidebar-bg
    #sidebar
      = image_tag 'jeff.jpg', class: 'jeff'
      %h1 Jeff Dickey
      %nav
        %ul
          %li= link_to_unless_current "About", '/'
          - if @on_blog
            %li= link_to "Blog", '/blog', class: 'current'
          - else
            %li= link_to "Blog", '/blog'
          %li= link_to_unless_current "Skills", '/skills'
          - if request.url.include? 'projects'
            %li= link_to "Projects", '/projects', class: 'current'
          - else
            %li= link_to "Projects", '/projects'
          %li= link_to_unless_current "Resume", 'http://careers.stackoverflow.com/dickey', target: '_blank'
          %li= link_to_unless_current "LinkedIn", 'http://linkedin.com/in/dickeytk'
          %li= link_to_unless_current "GitHub", 'http://github.com/dickeytk'
          - if admin_user_signed_in?
            %li= link_to_unless_current "Admin", '/admin'
      %span.email me@jeffdickey.info
    #content
      = yield
